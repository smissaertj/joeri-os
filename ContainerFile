# This stage is responsible for holding onto
# your config without copying it directly into
# the final image
FROM scratch AS stage-files
COPY ./files /files


# Copy modules
# The default modules are inside blue-build/modules
# Custom modules overwrite defaults
FROM scratch AS stage-modules
COPY ./modules /modules

# Bins to install
# These are basic tools that are added to all images.
# Generally used for the build process. We use a multi
# stage process so that adding the bins into the image
# can be added to the ostree commits.
FROM scratch AS stage-bins
COPY --from=ghcr.io/sigstore/cosign/cosign:v2.4.3 /ko-app/cosign /bins/cosign
COPY --from=ghcr.io/blue-build/cli:latest-installer \
  /out/bluebuild /bins/bluebuild
# Keys for pre-verified images
# Used to copy the keys into the final image
# and perform an ostree commit.
#
# Currently only holds the current image's
# public key.
FROM scratch AS stage-keys
COPY cosign.pub /keys/joeri-os.pub


# Main image
FROM ghcr.io/ublue-os/onyx-main@sha256:4ddc5857b981a9aba486135685d39ce618db29847eefa9c5e84b775a0d5981dd AS joeri-os
ARG RECIPE=./recipes/recipe.yml
ARG IMAGE_REGISTRY=localhost
ARG CONFIG_DIRECTORY="/tmp/files"
ARG MODULE_DIRECTORY="/tmp/modules"
ARG IMAGE_NAME="joeri-os"
ARG BASE_IMAGE="ghcr.io/ublue-os/onyx-main"
ARG FORCE_COLOR=1
ARG CLICOLOR_FORCE=1
ARG RUST_LOG_STYLE=always
# Key RUN
RUN --mount=type=bind,from=stage-keys,src=/keys,dst=/tmp/keys \
  mkdir -p /etc/pki/containers/ \
  && cp /tmp/keys/* /etc/pki/containers/ \
  && ostree container commit

# Bin RUN
RUN --mount=type=bind,from=stage-bins,src=/bins,dst=/tmp/bins \
  mkdir -p /usr/bin/ \
  && cp /tmp/bins/* /usr/bin/ \
  && ostree container commit
RUN --mount=type=bind,from=ghcr.io/blue-build/nushell-image:default,src=/nu,dst=/tmp/nu \
  mkdir -p /usr/libexec/bluebuild/nu \
  && cp -r /tmp/nu/* /usr/libexec/bluebuild/nu/ \
  && ostree container commit
RUN --mount=type=bind,from=ghcr.io/blue-build/cli/build-scripts:v0.9.11,src=/scripts/,dst=/scripts/ \
  /scripts/pre_build.sh

# Module RUNs
RUN \
--mount=type=bind,from=stage-files,src=/files,dst=/tmp/files,rw \
--mount=type=bind,from=ghcr.io/blue-build/modules/files:latest,src=/modules,dst=/tmp/modules,rw \
--mount=type=bind,from=ghcr.io/blue-build/cli/build-scripts:v0.9.11,src=/scripts/,dst=/tmp/scripts/ \
  --mount=type=cache,dst=/var/cache/rpm-ostree,id=rpm-ostree-cache-joeri-os-latest,sharing=locked \
  --mount=type=cache,dst=/var/cache/libdnf5,id=dnf-cache-joeri-os-latest,sharing=locked \
  /tmp/scripts/run_module.sh 'files' '{"type":"files","files":[{"source":"system","destination":"/"}]}'
RUN \
--mount=type=bind,from=stage-files,src=/files,dst=/tmp/files,rw \
--mount=type=bind,from=ghcr.io/blue-build/modules/dnf:latest,src=/modules,dst=/tmp/modules,rw \
--mount=type=bind,from=ghcr.io/blue-build/cli/build-scripts:v0.9.11,src=/scripts/,dst=/tmp/scripts/ \
  --mount=type=cache,dst=/var/cache/rpm-ostree,id=rpm-ostree-cache-joeri-os-latest,sharing=locked \
  --mount=type=cache,dst=/var/cache/libdnf5,id=dnf-cache-joeri-os-latest,sharing=locked \
  /tmp/scripts/run_module.sh 'dnf' '{"type":"dnf","repos":{"files":["mullvad.repo","1password.repo","brave-browser.repo"],"keys":["https://brave-browser-rpm-release.s3.brave.com/brave-core.asc","https://downloads.1password.com/linux/keys/1password.asc"],"copr":["atim/starship"],"nonfree":"rpmfusion"},"install":{"skip-unavailable":true,"skip-broken":false,"packages":["brave-browser","mullvad-vpn","1password","1password-cli","gcc","p7zip","p7zip-plugins","starship","unrar","https://github.com/Eugeny/tabby/releases/download/v1.0.223/tabby-1.0.223-linux-x64.rpm"]},"optfix":["1Password","brave.com","Mullvad VPN","Tabby"],"remove":{"packages":["firefox","firefox-langpacks"]}}'
RUN \
--mount=type=bind,from=stage-files,src=/files,dst=/tmp/files,rw \
--mount=type=bind,from=ghcr.io/blue-build/modules/systemd:latest,src=/modules,dst=/tmp/modules,rw \
--mount=type=bind,from=ghcr.io/blue-build/cli/build-scripts:v0.9.11,src=/scripts/,dst=/tmp/scripts/ \
  --mount=type=cache,dst=/var/cache/rpm-ostree,id=rpm-ostree-cache-joeri-os-latest,sharing=locked \
  --mount=type=cache,dst=/var/cache/libdnf5,id=dnf-cache-joeri-os-latest,sharing=locked \
  /tmp/scripts/run_module.sh 'systemd' '{"type":"systemd","system":{"enabled":["mullvad-daemon"]}}'
RUN \
--mount=type=bind,from=stage-files,src=/files,dst=/tmp/files,rw \
--mount=type=bind,from=ghcr.io/blue-build/modules/default-flatpaks:latest,src=/modules,dst=/tmp/modules,rw \
--mount=type=bind,from=ghcr.io/blue-build/cli/build-scripts:v0.9.11,src=/scripts/,dst=/tmp/scripts/ \
  --mount=type=cache,dst=/var/cache/rpm-ostree,id=rpm-ostree-cache-joeri-os-latest,sharing=locked \
  --mount=type=cache,dst=/var/cache/libdnf5,id=dnf-cache-joeri-os-latest,sharing=locked \
  /tmp/scripts/run_module.sh 'default-flatpaks' '{"type":"default-flatpaks","notify":true,"system":{"install":["com.discordapp.Discord","com.github.PintaProject.Pinta","com.ranfdev.DistroShelf","com.slack.Slack","de.haeckerfelix.Fragments","dev.geopjr.Tuba","dev.zed.Zed","it.mijorus.gearlever","md.obsidian.Obsidian","net.waterfox.waterfox","org.fedoraproject.MediaWriter","org.flameshot.Flameshot","org.mozilla.firefox","org.telegram.desktop","org.telegram.desktop.webview","org.videolan.VLC","rest.insomnia.Insomnia","com.github.rafostar.Clapper","com.github.tchx84.Flatseal","io.github.flattool.Ignition","io.github.flattool.Warehouse","io.github.input_leap.input-leap","io.gitlab.adhami3310.Impression","org.gnome.baobab","org.gnome.Calculator","org.gnome.Calendar","org.gnome.Characters","org.gnome.clocks","org.gnome.Connections","org.gnome.Contacts","org.gnome.DejaDup","org.gnome.Papers","com.mattjakeman.ExtensionManager","org.gnome.FileRoller","org.gnome.font-viewer","org.gnome.Logs","org.gnome.Loupe","org.gnome.Maps","org.gnome.NautilusPreviewer","org.gnome.World.PikaBackup","org.gnome.SimpleScan","org.gnome.TextEditor","org.gnome.Weather","io.missioncenter.MissionCenter","io.github.pwr_solaar.solaar","org.mozilla.firefox","org.mozilla.Thunderbird","org.gustavoperedo.FontDownloader","page.tesk.Refine"],"remove":["org.gnome.eog"]},"user":{}}'
RUN \
--mount=type=bind,from=stage-files,src=/files,dst=/tmp/files,rw \
--mount=type=bind,from=ghcr.io/blue-build/modules/signing:latest,src=/modules,dst=/tmp/modules,rw \
--mount=type=bind,from=ghcr.io/blue-build/cli/build-scripts:v0.9.11,src=/scripts/,dst=/tmp/scripts/ \
  --mount=type=cache,dst=/var/cache/rpm-ostree,id=rpm-ostree-cache-joeri-os-latest,sharing=locked \
  --mount=type=cache,dst=/var/cache/libdnf5,id=dnf-cache-joeri-os-latest,sharing=locked \
  /tmp/scripts/run_module.sh 'signing' '{"type":"signing"}'

RUN --mount=type=bind,from=ghcr.io/blue-build/cli/build-scripts:v0.9.11,src=/scripts/,dst=/scripts/ \
  /scripts/post_build.sh

# Labels are added last since they cause cache misses with buildah
LABEL org.blue-build.build-id="dbaa6d73-4ef9-4fe9-b7c7-8a179143ab74"
LABEL org.opencontainers.image.title="joeri-os"
LABEL org.opencontainers.image.description="Universal Blue with Brave Browser, 1Pasword, MullvadVPN, Tabby and additional Flatpaks."
LABEL org.opencontainers.image.source=""
LABEL org.opencontainers.image.base.digest="sha256:4ddc5857b981a9aba486135685d39ce618db29847eefa9c5e84b775a0d5981dd"
LABEL org.opencontainers.image.base.name="ghcr.io/ublue-os/onyx-main:latest"
LABEL org.opencontainers.image.created="2025-04-29T20:13:43.715866786+00:00"
LABEL io.artifacthub.package.readme-url=https://raw.githubusercontent.com/blue-build/cli/main/README.md